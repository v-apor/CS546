<main>
    <h1>Register</h1>
    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}
    <p>Fill in the form below to create a new account:</p>
    <form action="/register" method="post" id="registration-form">
        <label for="firstNameInput">First Name:</label>
        <input type="text" name="firstNameInput" id="firstNameInput" />
        {{#if firstNameError}}
            <p style="color: red">{{firstNameError}}</p>
        {{/if}}
        <br />
        <label for="lastNameInput">Last Name:</label>
        <input type="text" name="lastNameInput" id="lastNameInput" />
        {{#if lastNameError}}
            <p style="color: red">{{lastNameError}}</p>
        {{/if}}
        <br />
        <label for="emailAddressInput">Email Address:</label>
        <input type="email" name="emailAddressInput" id="emailAddressInput" />
        {{#if emailError}}
            <p style="color: red">{{emailError}}</p>
        {{/if}}
        <br />
        <label for="passwordInput">Password:</label>
        <input type="password" name="passwordInput" id="passwordInput" />
        {{#if passwordError}}
            <p style="color: red">{{passwordError}}</p>
        {{/if}}
        <br />
        <label for="confirmPasswordInput">Confirm Password:</label>
        <input
            type="password"
            name="confirmPasswordInput"
            id="confirmPasswordInput"
        />
        {{#if confirmPasswordError}}
            <p style="color: red">{{confirmPasswordError}}</p>
        {{/if}}
        <br />
        <label for="roleInput">Role:</label>
        <select name="roleInput" id="roleInput">
            <option value="admin">Admin</option>
            <option value="user">User</option>
        </select>
        {{#if roleError}}
            <p style="color: red">{{roleError}}</p>
        {{/if}}
        <br />
        <input type="submit" value="Register" />
    </form>
    <div class="error" id="registerError"></div>
    <p class="message">Already have an account? <a href="/login">Click here to log-in</a></p>
    <script src="../../public/js/lab10.js"></script>
</main>